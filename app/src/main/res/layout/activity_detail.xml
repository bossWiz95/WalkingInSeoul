<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/d_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/d_img"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/d_txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목입니다."
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/d_txtAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주소입니다.."
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/d_txtCallNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전화번호."
            android:textSize="20sp"/>
    </LinearLayout>
    <Button
        android:id="@+id/btnShowMap"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="MAP"

        app:layout_constraintBottom_toBottomOf="@id/d_layout1"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/d_layout1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:id="@+id/d_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상세 내용"
                android:textSize="25sp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/d_txtDepartment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="관리부서."
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/d_txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개원일입니다.."
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/d_txtArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="면적입니다.."
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/d_txtdetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공원 개요입니다.."
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/d_txtway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오시는 길입니다..."
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>