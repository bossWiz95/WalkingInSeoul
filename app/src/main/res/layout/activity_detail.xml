<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:id="@+id/d_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/d_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/d_txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제목입니다."
                android:textSize="30sp"
                android:fontFamily="@font/reco"

                android:layout_marginTop="30dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/d_txtAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주소입니다.."
                    android:textSize="20sp"
                    android:fontFamily="@font/reco"
                    android:layout_weight="10"

                    android:layout_gravity="center_vertical"/>
                <Button
                    android:id="@+id/btnShowMap"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="MAP"
                    android:background="@color/colorWhite"
                    android:fontFamily="@font/reco"
                    android:layout_weight="1"

                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <TextView
                android:id="@+id/d_txtCallNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전화번호."
                android:textSize="20sp"
                android:fontFamily="@font/reco"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상세 내용"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:fontFamily="@font/reco"

                android:layout_marginTop="40dp"
                android:layout_marginBottom="30dp"/>
            <TextView
                android:id="@+id/d_txtDepartment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="관리부서."
                android:textSize="20sp"
                android:fontFamily="@font/reco"/>
            <TextView
                android:id="@+id/d_txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개원일입니다.."
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/reco"/>
            <TextView
                android:id="@+id/d_txtArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="면적입니다."
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/reco"/>
            <TextView
                android:id="@+id/d_txtdetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공원 개요입니다."
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/reco"/>
            <TextView
                android:id="@+id/d_txtway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오시는 길입니다."
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/reco"/>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/btnBackPress"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@mipmap/back"/>
</androidx.constraintlayout.widget.ConstraintLayout>